<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AddMovie</servlet-name>
        <servlet-class>admin.AddMovie</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddTheatre</servlet-name>
        <servlet-class>admin.AddTheatre</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchMovie</servlet-name>
        <servlet-class>admin.SearchMovie</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>admin.DeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MappingServlet</servlet-name>
        <servlet-class>admin.MappingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddMovie</servlet-name>
        <url-pattern>/AddMovie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddTheatre</servlet-name>
        <url-pattern>/AddTheatre</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchMovie</servlet-name>
        <url-pattern>/SearchMovie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/DeleteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MappingServlet</servlet-name>
        <url-pattern>/MappingServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
